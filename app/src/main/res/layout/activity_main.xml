<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aditi.guessinggame.MainActivity"
    android:background="#d1fdf9">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zero"
        android:id="@+id/leftButton"
        android:onClick="leftButtonClick"
        android:layout_marginBottom="94dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/pointsTitle"
        android:background="@color/accent_material_light"
        android:textColor="#ffffff"
        android:textStyle="bold|normal"
        android:textSize="12pt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/one"
        android:id="@+id/rightButton"
        android:layout_alignBottom="@+id/leftButton"
        android:layout_alignParentEnd="true"
        android:onClick="rightButtonClick"
        android:layout_toEndOf="@+id/pointsTitle"
        android:background="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="12pt"
        android:textColor="#fff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/points"
        android:text="@string/zero"
        android:layout_above="@+id/leftButton"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="62dp"
        android:layout_marginBottom="62dp"
        android:textSize="20pt"
        android:typeface="monospace" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Points"
        android:id="@+id/pointsTitle"
        android:textSize="16pt"
        android:layout_above="@+id/points"
        android:layout_centerHorizontal="true"
        android:typeface="monospace" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/description"
        android:id="@+id/description"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="10pt"
        android:typeface="sans"
        android:textStyle="italic" />

</RelativeLayout>
